if url
  img.im-search-image.im-blur(src="#{url}")

if frontPage
  h1 ImageSpace

.im-search-form(id=(dropzone) ? 'im-upload' : '')
  if dropzone
    .hide
       input#im-files(type="file", multiple="multiple")
  input.im-search.form-control(type="text", placeholder=(girder.currentUser) ? "Search post metadata or drop an image..." : "Search post metadata or log in to drop an image...", value=query)

  if dropzone
    button.btn.btn-primary.im-advanced-search-button
      i.icon-upload

  if advancedSearch
    a#advanced-search(href='#') Advanced Search
